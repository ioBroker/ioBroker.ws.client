{
  "name": "@iobroker/ws",
  "version": "3.0.5",
  "description": "ioBroker client side of web sockets",
  "author": {
    "name": "bluefox",
    "email": "dogafox@gmail.com"
  },
  "homepage": "https://github.com/ioBroker/ioBroker.ws.client",
  "keywords": [
    "ioBroker",
    "web",
    "socket",
    "web-socket"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ioBroker/ioBroker.ws.client"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {},
  "devDependencies": {
    "@alcalzone/esm2cjs": "^1.4.2",
    "@alcalzone/release-script": "^5.1.1",
    "@alcalzone/release-script-plugin-license": "^5.1.1",
    "@iobroker/eslint-config": "^2.2.0",
    "mocha": "^11.7.5",
    "terser": "^5.46.0",
    "typescript": "~5.9.3"
  },
  "bugs": {
    "url": "https://github.com/ioBroker/ioBroker.web/issues"
  },
  "main": "build/cjs/socket.io.js",
  "module": "build/esm/socket.io.js",
  "exports": {
    ".": {
      "import": "./build/esm/socket.io.js",
      "require": "./build/cjs/socket.io.js",
      "types": "./build/esm/types.d.ts"
    },
    "./package.json": "./package.json"
  },
  "types": "build/esm/index.d.ts",
  "typesVersions": {
    "*": {
      "build/esm/index.d.ts": [
        "build/esm/types.d.ts"
      ],
      "build/cjs/index.d.ts": [
        "build/esm/types.d.ts"
      ],
      "*": [
        "build/esm/*"
      ]
    }
  },
  "files": [
    "src/",
    "build/",
    "package-lock.json",
    "LICENSE"
  ],
  "scripts": {
    "postbuild": "esm2cjs --in build/esm --out build/cjs -l error",
    "test": "mocha --exit",
    "lint": "eslint -c eslint.config.mjs",
    "build": "node tasks && tsc -p tsconfig.json && node tasks --post && npm run minify",
    "minify": "terser build/esm/socket.io.js --compress ecma=2021,computed_props=false -o build/esm/socket.io.min.js --source-map \"content='build/esm/socket.io.js.map'\"",
    "release": "release-script",
    "release-patch": "release-script patch --yes",
    "release-minor": "release-script minor --yes",
    "release-major": "release-script major --yes"
  },
  "license": "MIT",
  "maintainers": [
    {
      "name": "bluefox",
      "email": "dogafox@gmail.com"
    }
  ]
}
